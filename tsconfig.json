{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "rootDir": "src/ts",
        "outDir": "src/public/js",
        "esModuleInterop": true,
        "strict": true,
        "allowJs": true
    },
    "include": ["src/ts/**/*"],
    "exclude": ["src/public/js", "vite.config.js"]
}
